            <Button id="buttonWindowClose-mini" fx:id="buttonDrawerClose" mnemonicParsing="false">
               <HBox.margin>
                  <Insets right="1.0" top="1.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="22.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="35.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="labelBezeichnung" text="Bezeichnung" textFill="WHITE">

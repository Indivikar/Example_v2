         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                <Button fx:id="buttonRunDemo" mnemonicParsing="false" text="run Demo" />
                  <Button fx:id="buttonShowSourceCode" mnemonicParsing="false" text="show Source Code" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="labelBeschreibung" text="Beschreibung" wrapText="true">
               <VBox.margin>
                  <Insets top="10.0" />
